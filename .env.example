# Hetzner Cloud API Token
HETZNER_TOKEN=your_hetzner_cloud_token

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=123456789:GET_YOUT_TOKEN_FROM_BOTFATHER

# Telegram Group ID that can use the bot
ALLOWED_GROUP_ID=-1234567890

# Admin Telegram ID for notifications
ADMIN_TG_ID=987654321

# Optional: Hetzner Location (default: nbg1)
HETZNER_LOCATION=nbg1

# Porkbun API credentials for DNS updates
PORKBUN_API_KEY=your_porkbun_api_key
PORKBUN_SECRET_KEY=your_porkbun_secret_key

# Domain for DNS updates (e.g., "mc.example.com" or "example.com")
PORKBUN_DOMAIN=example.com